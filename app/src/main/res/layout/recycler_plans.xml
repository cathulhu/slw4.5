<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/firstQuestionsArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/loanRatioTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_margin="16dp"
            android:text="Repayment Strategies"
            android:textColor="@color/step_pager_selected_tab_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/planInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@+id/loanRatioTitle"
            android:text="Listed below are the best repayment strategies PROGRAMNAME could calculate. Tap to select one and view it in greater detail."
            android:textSize="16sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerList"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_below="@+id/firstQuestionsArea" />

</RelativeLayout>