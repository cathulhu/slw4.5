<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroll or tap and enter values below:"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here you'll enter an estimat of your approximat debt and income values when you start repayment." />

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2">

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Debt"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:id="@+id/verticalFrame1"
                android:layout_below="@+id/textView29"
                android:layout_centerHorizontal="true">

                <balcorasystems.slw41.VerticalSeekBar
                    android:id="@+id/seekBar2"
                    style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:max="100"
                    android:progress="30"
                    android:scrollbarThumbVertical="@drawable/common_google_signin_btn_icon_disabled" />

            </FrameLayout>


            <NumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@id/verticalFrame1"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView24"
                android:layout_centerHorizontal="true"
                android:text="$36,500"
                android:textSize="36sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout11"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/relativeLayout4">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$54,200"
                android:textSize="36sp"
                android:layout_below="@+id/textView23"
                android:layout_centerHorizontal="true" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:id="@+id/verticalFrame2"
                android:layout_below="@+id/textView37"
                android:layout_centerHorizontal="true">

                <balcorasystems.slw41.VerticalSeekBar
                    android:id="@+id/seekBar3"
                    style="@android:style/Widget.DeviceDefault.Light.SeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:max="100"
                    android:progress="25"
                    android:scrollbarThumbVertical="@drawable/common_google_signin_btn_icon_disabled" />

            </FrameLayout>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Income"
                android:textStyle="bold" />

            <NumberPicker
                android:id="@+id/numberPicker2"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/verticalFrame2"
                android:layout_height="100dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>